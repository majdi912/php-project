{% extends 'base2.html.twig' %}

{% block title %}List{% endblock %}
{% block name %}Liste de tous les hosts{% endblock %}
{% block stylesheets %}
           <link href="{{ asset('css/main.css') }}" rel="stylesheet" />
        {% endblock %}
{% block body %}
<link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">

   <table class="table table-striped">
  <thead class="thead-dark">
      

    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nom</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
    {% for p in hosts %}
    <tr>
      <th scope="row">{{ p.id }}</th>
      <td><a href="{{ path('host_detail',{id:p.id})}}">{{ p.nom }}</a></td>
      <td> {{ p.status}}</td>

     
    </tr>
     {% endfor %} 
       
  </tbody>

</table>
<h2>Aujourd'huit c'est le:</h2>
<script>
var today = new Date();
var dd = String(today.getDate()).padStart(2, '0');
var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
var yyyy = today.getFullYear();

today = dd + '/' + mm + '/' + yyyy;
document.write(today);</script>

      <!-- Add icon library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<!-- Add font awesome icons to buttons (note that the fa-spin class rotates the icon) -->
{% if is_granted('ROLE_ADMIN') %}
<div class="m">
<center><a class="buttonload btn btn-danger" href="{{ path('ping2_host')}}" >
  <i class="fa fa-spinner fa-spin"></i>scanner</a>
</center></div>
<center><a class="btn btn-primary" href="{{ path('host.create') }}">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
   add</a></center>
    
      </div>
      {% endif %}

{% endblock %}
